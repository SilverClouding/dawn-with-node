{%- layout none -%}
{ "id":
{{- product.id | json -}}
, "handle":
{{- product.handle | json -}}
, "title":
{{- product.title | json -}}
, "tags":
{{- product.tags | json -}}
, "available":
{{- product.available | json -}}
, "url":
{{- product.url | json -}}
, "type":
{{- product.type | json -}}
, "description":
{{- product.description | json -}}
, "images": [
{%- for img in product.images -%}
  { "src":
  {{- img.src | json -}}
  }
  {%- unless forloop.last -%},{%- endunless -%}
{%- endfor -%}
], "metafields":
{%- render 'sf-product-metafields', product: product -%}
, "variants":
{%- render 'sf-product-variants', product: product -%}
, "price":
{{- product.price | json -}}
, "priceMin":
{{- product.price_min | json -}}
, "priceMax":
{{- product.price_max | json -}}
, "compareAtPriceMax":
{{- product.compare_at_price_max | json -}}
, "resultType": "product" }
