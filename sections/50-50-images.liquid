<section class="fifty-fifty-images">
  <div class="container">
    <div class="fifty-fifty-images__grid">
      {% for block in section.blocks %}
        <div class="fifty-fifty-images__block">
          {% if block.settings.image != blank %}
            <div class="fifty-fifty-images__image">
              {% render 'image', img: block.settings.image, width: 1260, vw_tablet: 100, vw_desktop: 50 %}
            </div>
          {% endif %}
          <div
            class="fifty-fifty-images__content{% if block.settings.background_color != blank %} fifty-fifty-images__content--bg{% endif %}"
            {% if block.settings.background_color %}
              style="--bg: {{ block.settings.background_color }};"
            {% endif %}
          >
            {% if block.settings.title != blank %}
              <h2 class="heading-2">{{ block.settings.title }}</h2>
            {% endif %}
            {% if block.settings.content != blank %}
              {{ block.settings.content }}
            {% endif %}
            {% if block.settings.cta_link != blank %}
              <a href="{{ block.settings.cta_link }}" class="cta">{{ block.settings.cta_text }}</a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "50/50 Images",
  "settings": [],
  "max_blocks": 2,
  "blocks": [
    {
      "name": "Block",
      "type": "block",
      "settings": [
        {
          "type": "color",
          "id": "background_color",
          "label": "Background Colour"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "Recommended size: 1260x1000px"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content",
          "default": "<p></p>"
        },
        {
          "type": "text",
          "id": "cta_text",
          "label": "CTA Text"
        },
        {
          "type": "url",
          "id": "cta_link",
          "label": "CTA Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "50/50 Images"
    }
  ]
}
{% endschema %}
