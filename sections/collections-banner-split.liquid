{% if section.settings.contained %}
  <div class="container">
{% endif %}
<section class="collections-banner-split{% if section.settings.contained %} collections-banner-split--contained{% endif%}">
  {% for block in section.blocks %}
    <div class="collections-banner-split__block">
      <div class="collections-banner-split__image">
        {% render 'image', img: block.settings.image, width: 1440, vw_tablet: 100, vw_desktop: 50 %}
      </div>
      <div class="collections-banner-split__content">
        <h2 class="heading--secondary">{{ block.settings.title }}</h2>
        {% if block.settings.cta_text != blank %}
          <a class="btn btn--primary-outline" href="{{ block.settings.cta_link }}">{{ block.settings.cta_text }}</a>
        {% endif %}
      </div>
    </div>
  {% endfor %}
</section>
{% if section.settings.contained %}
  </div>
{% endif %}

{% schema %}
{
  "name": "Collection Banner (50/50)",
  "settings": [
    {
      "type": "checkbox",
      "id": "contained",
      "label": "Contained",
      "default": false,
      "info": "If checked section will display within the page container"
    }
  ],
  "max_blocks": 2,
  "blocks": [
    {
      "type": "banner",
      "name": "Banner",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "Recommended Size: 1440x1200px."
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "cta_text",
          "label": "CTA Text",
          "default": "Shop"
        },
        {
          "type": "url",
          "id": "cta_link",
          "label": "CTA Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection Banner (50/50)"
    }
  ]
}
{% endschema %}
