{% if section.blocks != blank %}
  <section class="quick-links">
    <div class="container">
      <div
        class="swiper"
        data-swiper-mob
        data-swiper-config='
          {
            "loop": false,
            "slidesPerView": "auto",
            "spaceBetween": 30,
            "freeMode": true,
            "navigation": {
              "nextEl": ".swiper-button-next",
              "prevEl": ".swiper-button-prev"
            }
          }
        '
      >
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide">
              <a href="{{ block.settings.url }}">
                <img
                  width="80"
                  height="80"
                  src="{{ block.settings.image | image_url }}"
                  alt="{{ block.settings.title }} Icon"
                  class="secondary-hero__icon"
                >
                <p class="heading-4">{{ block.settings.title }}</p>
              </a>
            </div>
          {% endfor %}
        </div>

        <button aria-label="Previous Slide" class="swiper-button swiper-button-prev"></button>
        <button aria-label="Next Slide" class="swiper-button swiper-button-next"></button>
      </div>
    </div>
  </section>
{% endif %}

{% schema %}
{
  "name": "Quick Links",
  "settings": [],
  "max_blocks": 8,
  "blocks": [
    {
      "name": "Quick Link",
      "type": "quick_link",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Quick Links"
    }
  ],
  "disabled_on": {
    "templates": ["*"],
    "groups": ["*"]
  }
}
{% endschema %}
